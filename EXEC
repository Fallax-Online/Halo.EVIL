#EXEC
import requests
import os

def download_image(url, folder_path):
    try:
        response = requests.get(url)
        if response.status_code == 200:
            # Save the image with the name 'x.jpg'
            save_path = os.path.join(folder_path, 'x.jpg')
            with open(save_path, 'wb') as f:
                f.write(response.content)
            return save_path
        else:
            print("Failed to download image. Status code:", response.status_code)
            return None
    except Exception as e:
        print("Error occurred while downloading image:", e)
        return None

def execute_image(image_path):
    try:
        os.system(image_path)
        return True
    except Exception as e:
        print("Error occurred while executing image:", e)
        return False

if __name__ == "__main__":
    image_url = "https://i.kym-cdn.com/entries/icons/original/000/000/091/TrollFace.jpg"  # Replace with the URL of the image you want to download
    folder_path = os.path.dirname(os.path.abspath(__file__))  # Get the folder path of the script
    image_path = download_image(image_url, folder_path)
    if image_path:
        print("Image downloaded and saved at:", image_path)
        if execute_image(image_path):
            print("Image executed successfully.")
        else:
            print("Failed to execute image.")
    else:
        print("Failed to download image.")


